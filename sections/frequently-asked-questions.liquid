<section class="page-width faq">
  <h2>Frequently Asked Questions</h2>
  <div class="faq-items">
  {%- for block in section.blocks -%}
    {%- if block.type == 'question' -%}
      <div class="faq-item" {{ block.shopify_attributes }}>
          <h4 class="faq-question_h3">{{block.settings.title}}</h4>
          <p class="faq-answer_p">{{block.settings.answer}}</p>
      </div>
    {%- endif -%}
  {%- endfor -%}
  </div>
</section>


{% schema %}
  {
    "name": "FAQ",
    "blocks": [
       {
        "type": "question",
        "name": "faq",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Question"
          },
          {
            "type": "textarea",
            "id": "answer",
            "label": "Answer"
          }
        ]
       }
    ],

    "presets": [
        {
            "category": "Store information",
            "name": "FAQs"
        }

    ]
  } 

{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
  const faqs = document.getElementsByClassName("faq-question_h3");
  let faqCount;

  for (faqCount = 0; faqCount < faqs.length; faqCount++) {
      faqs[faqCount].onclick = function(){
        this.nextElementSibling.classList.toggle("show");
      };
  }
{% endjavascript %}